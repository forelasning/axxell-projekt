@tailwind base;
@tailwind components;
@tailwind utilities;

h1 {
    @apply text-3xl font-semibold;
}

h2 {
    @apply text-2xl font-semibold;
}

h3 {
    @apply text-xl font-semibold;
}

.block {
    @apply container py-8 px-4 mt-3 mb-3 mx-auto;
}

.block-fullwidth {
    @apply mx-4 py-4 px-6 mx-auto;
}

.cover-image {
    max-height: 600px;
}
